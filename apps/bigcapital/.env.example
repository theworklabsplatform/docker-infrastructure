# BigCapital Application Environment Variables
# Copy to .env and fill in your values

# Mail Configuration
MAIL_HOST=smtp.gmail.com
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_PORT=587
MAIL_SECURE=false
MAIL_FROM_NAME="BigCapital"
MAIL_FROM_ADDRESS=noreply@bigcapital.io

# Database Configuration
DB_USER=bigcapital
DB_PASSWORD=secure_password_here
DB_CHARSET=utf8

# System database
SYSTEM_DB_NAME=bigcapital_system

# Tenants databases
TENANT_DB_NAME_PERFIX=bigcapital_tenant_

# Authentication
JWT_SECRET=your-secret-key-here-min-32-chars

# Application
BASE_URL=https://accounting.theworklabs.cc

# Agendash
AGENDASH_AUTH_USER=admin
AGENDASH_AUTH_PASSWORD=secure_password

# Sign-up restrictions
SIGNUP_DISABLED=false
SIGNUP_ALLOWED_DOMAINS=
SIGNUP_ALLOWED_EMAILS=

# Sign-up email confirmation
SIGNUP_EMAIL_CONFIRMATION=true

# Gotenberg (Pdf generator)
GOTENBERG_URL=http://bigcapital-gotenberg:9000
GOTENBERG_DOCS_URL=https://gotenberg.dev

# Exchange Rate
EXCHANGE_RATE_SERVICE=openexchangerates
OPEN_EXCHANGE_RATE_APP_ID=your-app-id-here

# Bank Sync
BANKING_CONNECT=plaid

# Plaid
PLAID_ENV=sandbox
PLAID_CLIENT_ID=your-client-id
PLAID_SECRET=your-secret
PLAID_LINK_WEBHOOK=https://accounting.theworklabs.cc/webhooks/plaid

# LemonSqueeze (Billing)
LEMONSQUEEZY_API_KEY=
LEMONSQUEEZY_STORE_ID=
LEMONSQUEEZY_WEBHOOK_SECRET=
HOSTED_ON_BIGCAPITAL_CLOUD=false

# New Relic
NEW_RELIC_DISTRIBUTED_TRACING_ENABLED=false
NEW_RELIC_LOG=stdout
NEW_RELIC_AI_MONITORING_ENABLED=false
NEW_RELIC_CUSTOM_INSIGHTS_EVENTS_MAX_SAMPLES_STORED=10000
NEW_RELIC_SPAN_EVENTS_MAX_SAMPLES_STORED=10000
NEW_RELIC_LICENSE_KEY=
NEW_RELIC_APP_NAME=BigCapital

# S3 Storage
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_ENDPOINT=
S3_BUCKET=

# Database Root Password
DB_ROOT_PASSWORD=secure_root_password
